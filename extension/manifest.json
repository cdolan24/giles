{
  "manifest_version": 3,
  "name": "UC Library Web-Scraper Chat Extension",
  "version": "0.1.0",
  "description": "Chat-based Q&A interface for UC Library and other scientific libraries.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://uclibrary.example.edu/*"]
}
